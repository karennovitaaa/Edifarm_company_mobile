<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="71dp"
    app:cardElevation="10dp"
    android:background="@color/white"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:orientation="vertical">

        <TextView
            android:id="@+id/nama_kegiatans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:fontFamily="@font/poppins_bold"
            android:paddingLeft="20dp"
            android:text="Penyiraman"
            android:textColor="@color/backgroun"
            android:textSize="15dp">

        </TextView>

        <TextView

            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Penyiraman pakek air"
            android:textColor="@color/font_card_activity"
            android:textSize="10dp"
            ></TextView>

        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparant"
            android:src="@drawable/icon_edit_pen"
            android:layout_gravity="center"
            android:layout_marginLeft="150dp"
            />

        <ImageButton
            android:id="@+id/buttondelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@color/transparant"
            android:src="@drawable/icon_trash2"
            tools:layout_editor_absoluteX="286dp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteY="33dp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>