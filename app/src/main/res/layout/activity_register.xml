<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroun"
    tools:context=".login">


    <androidx.cardview.widget.CardView

        android:id="@+id/cardViews2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"

        android:background="@color/backgroun"
        android:foregroundGravity="center"
        app:cardBackgroundColor="@color/base"
        app:cardCornerRadius="25dp"
        app:cardMaxElevation="210dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:alpha="1"
            android:foregroundGravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Daftar"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold">

            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="10dp"
                android:text="Username"

                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold">

            </TextView>


            <EditText
                android:id="@+id/username_field"
                android:layout_width="275dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/field"

                android:hint="Masukkan Username"


                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.22" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nama"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/name_field"
                android:layout_width="275dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/field"
                android:hint="Masukkan Nama"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="10sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tanggal Lahir"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/born_date_field"
                android:layout_width="275dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/field"
                android:hint="Masukkan Tanggal Lahir"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="10sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="No Telpon"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/phone_field"
                android:layout_width="275dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/field"
                android:hint="Masukkan No Telpon"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Alamat"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>


            <EditText
                android:id="@+id/address_field"
                android:layout_width="275dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/field"
                android:hint="Masukkan Alamat"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold">

            </TextView>


            <EditText
                android:id="@+id/email_field"
                android:layout_width="275dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/field"
                android:hint="Masukkan email"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/password_field"
                android:layout_width="275dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/field"
                android:hint="Masukkan password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Konfirmasi Password"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/cpassword_field"
                android:layout_width="275dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/field"
                android:hint="Ulangi Password"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="10sp" />

            <Button
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparant"
                android:text="Sudah Punya Akun?"
                android:textColor="@color/app_bar"
                android:textStyle="italic"
                tools:layout_editor_absoluteX="158dp"
                tools:layout_editor_absoluteY="391dp"></Button>


            <Button
                android:id="@+id/daftar"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="82dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/button"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Daftar"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Powered By Edifarm Company"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViews2" />


</androidx.constraintlayout.widget.ConstraintLayout>



