<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroun"
    tools:context=".login">


    <ImageView
        android:id="@+id/bulet"
        android:layout_width="419dp"
        android:layout_height="415dp"


        android:layout_marginStart="72dp"
        android:layout_marginBottom="212dp"
        app:layout_constraintBottom_toTopOf="@+id/petani"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bulet2">


    </ImageView>

    <ImageView
        android:id="@+id/daun"
        android:layout_width="391dp"
        android:layout_height="462dp"


        android:layout_marginEnd="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71"
        app:srcCompat="@drawable/daunganja">


    </ImageView>


    <ImageView
        android:id="@+id/petani"
        android:layout_width="277dp"
        android:layout_height="280dp"


        android:layout_marginStart="160dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/petanimurka">


    </ImageView>


    <androidx.cardview.widget.CardView

        android:id="@+id/cardViews2"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:alpha="0.5"

        android:foregroundGravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        app:cardMaxElevation="210dp"
android:layout_marginBottom="100dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="318dp"
            android:layout_height="438dp"
            android:layout_gravity="center"
            android:alpha="1"
            android:foregroundGravity="center">




            <TableLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username :"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold"></TextView>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditText"
                        android:layout_width="179dp"
                        android:layout_height="44dp"


                        android:hint="    Masukan Username"
                        android:inputType="textEmailAddress"
                        android:textColorHint="@color/black"
                        android:textSize="14dp"
                        android:textStyle="italic"
                        app:layout_constraintBottom_toTopOf="@+id/textInputPassword"
                        tools:layout_editor_absoluteX="25dp"

                        />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password :"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold"></TextView>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputPassword"
                        android:layout_width="179dp"
                        android:layout_height="44dp"

                        android:layout_marginBottom="36dp"
                        android:hint="    Masukan Username"
                        android:inputType="textEmailAddress"
                        android:textColorHint="@color/black"
                        android:textSize="14dp"
                        android:textStyle="italic"
                        app:layout_constraintBottom_toTopOf="@+id/textInputPassword"
                        tools:layout_editor_absoluteX="25dp"

                        />


                </TableRow>

            </TableLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:foregroundGravity="center"
            app:cardBackgroundColor="@color/button"
            android:layout_marginTop="160dp"
            app:cardCornerRadius="15dp"
            app:cardMaxElevation="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Login"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="101dp"
        android:layout_height="80dp"

        android:layout_marginTop="40dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>



