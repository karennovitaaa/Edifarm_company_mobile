<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:backgroundTint="@color/white"
        android:paddingRight="20dp"
        tools:context=".dashboardfixx.NewPosting">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Unggah Postingan"
            android:textColor="@color/black"
            android:alpha="0.7"
            android:textSize="24dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="20dp"
            android:paddingBottom="30dp" />


        <ImageButton
            android:id="@+id/addImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparant"
            android:src="@drawable/add_box">

        </ImageButton>

        <TextView
            android:id="@+id/text_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="115dp"
            android:text="Tuliskan Keterangan"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_medium"
            android:alpha="0.7"
            android:textColor="@color/black" />


        <EditText
            android:id="@+id/add_caption"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center|left"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/fieldedit"
            android:fontFamily="@font/poppins_medium"
            android:hint="keterangan ..."
            android:maxLines="4"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="115dp"
            android:text="Tambahkan Lokasi"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_medium"
            android:alpha="0.7"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/add_location"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_gravity="left|center"
                android:background="@drawable/fieldedit"
                android:fontFamily="@font/poppins_medium"
                android:hint="Tuliskan atau klik tombol lokasi"
                android:maxLines="4"
                android:onClick="showDatePickerDialog"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/callocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:background="@color/transparant"
                android:fontFamily="@font/poppins_medium"
                android:src="@drawable/icon_okeloc">

            </ImageButton>


        </LinearLayout>

        <Button
            android:id="@+id/add_posting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="70dp"
            android:backgroundTint="@color/button"
            android:text="Unggah"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_medium"/>


    </LinearLayout>
</ScrollView>