<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginVertical="2dp"
        android:background="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="12dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/lineargroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewPost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    app:cardCornerRadius="100dp">

                    <ImageButton
                        android:id="@+id/imageProfilPosting"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="center" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textProfils"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginBottom="13dp"
                    android:background="@color/transparant"
                    android:backgroundTint="@color/transparant"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingLeft="10dp"
                    android:text="wishal123"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_tanggal_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="74dp"
                    android:layout_marginRight="13dp"
                    android:layout_toEndOf="@+id/textProfils"
                    android:alpha="0.7"
                    android:fontFamily="@font/poppins_light"
                    android:text="1-3-3032"
                    android:textColor="@color/black"
                    android:textSize="10dp">

                </TextView>

            </LinearLayout>

            <ImageButton
                android:id="@+id/button_reason"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/lineargroup1"
                android:backgroundTint="@color/transparant"
                android:src="@drawable/report3" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/listImagePosting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_caption"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/post"></com.google.android.material.imageview.ShapeableImageView>

            <TextView
                android:id="@+id/text_caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineargroup1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="10dp"
                android:alpha="0.7"
                android:fontFamily="@font/poppins_medium"
                android:paddingTop="0dp"
                android:text="allahuakbar"
                android:textColor="@color/black"
                android:textSize="12dp" />


            <LinearLayout
                android:id="@+id/linear_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listImagePosting"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="23dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/white"
                    android:onClick="like"
                    android:src="@drawable/share_link">

                </ImageButton>

                <ImageButton
                    android:id="@+id/comment_button"
                    android:layout_width="30dp"
                    android:layout_height="29dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:onClick="like"
                    android:src="@drawable/new_comment"></ImageButton>

                <TextView
                    android:id="@+id/jumlahh_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="4dp"
                    android:alpha="0.7"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="left"
                    android:text="0"
                    android:textColor="@color/black"></TextView>

                <ImageButton
                    android:id="@+id/like_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:onClick="coment">

                </ImageButton>

                <TextView
                    android:id="@+id/jumlah_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:alpha="0.7"
                    android:fontFamily="@font/poppins_medium"
                    android:text="0"
                    android:textColor="@color/black">

                </TextView>


            </LinearLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>