<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/button_background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginVertical="2dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="12dp"
        android:background="@color/button_background">


        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white">


            <androidx.cardview.widget.CardView
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:id="@+id/cardViewPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp">
                <ImageView
                    android:id="@+id/imageProfilPost"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/wishal_profile"/>

            </androidx.cardview.widget.CardView>


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/listImagePost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardViewPost"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/post">

            </com.google.android.material.imageview.ShapeableImageView>

            <TextView
                android:id="@+id/textPost1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="allahuakbar"
                android:layout_below="@id/listImagePost"
                android:paddingTop="0dp"
                android:paddingBottom="10dp"
                android:paddingLeft="50dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cardViewPost"
                android:layout_alignBottom="@+id/cardViewPost"
                android:layout_marginStart="13dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="13dp"
                android:layout_toEndOf="@+id/cardViewPost"
                android:paddingLeft="10dp"
                android:text="wishal123"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textPost2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cardViewPost"
                android:layout_alignBottom="@+id/cardViewPost"
                android:layout_marginStart="147dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="13dp"
                android:layout_marginRight="13dp"
                android:layout_toEndOf="@+id/textProfil"
                android:paddingLeft="10dp"
                android:text="1-3-3032"
                android:textColor="@color/black">

            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listImagePost"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/like_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"

                    android:background="@color/white"
                    android:onClick="like"
                    android:src="@drawable/coment">

                </ImageButton>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="4dp"
                    android:gravity="left"
                    android:text="121"
                    android:textColor="@color/black"></TextView>

                <ImageButton
                    android:id="@+id/coment_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:onClick="coment"
                    android:src="@drawable/button_likefix">

                </ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:text="126"
                    android:textColor="@color/black"
                    android:layout_marginRight="5dp">

                </TextView>


            </LinearLayout>


        </RelativeLayout>



    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>