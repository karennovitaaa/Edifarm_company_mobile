<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout

        android:id="@+id/linearLayout2"
        android:layout_width="411dp"
        android:layout_height="356dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_profile"
                android:src="@drawable/petanimurka">

            </ImageView>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="adit123"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold"


                >

            </TextView>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="cerah banget ya lamgitnyaa"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="normal">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"

            android:layout_height="203dp"
            tools:ignore="MissingConstraints">
            <ImageView

                android:id="@+id/medsos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/post"
                tools:layout_editor_absoluteX="3dp"
                tools:layout_editor_absoluteY="200dp">

            </ImageView>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/like_white"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:onClick="like"
                android:id="@+id/like_button"
                android:background="@color/white">

            </ImageButton>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/coment"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:onClick="coment"
                android:id="@+id/coment_button"
                android:background="@color/white">

            </ImageButton>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/more"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:onClick="more"
                android:id="@+id/more_button"
                android:background="@color/white">

            </ImageButton>

        </LinearLayout>


    </LinearLayout>

    <ListView
        android:id="@+id/listcomment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:paddingTop="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


    </ListView>



</androidx.constraintlayout.widget.ConstraintLayout>